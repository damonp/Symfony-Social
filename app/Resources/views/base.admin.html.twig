<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title>{% block title %}QueueitApp Admin{% endblock %}</title>
	{% block stylesheets %}
	<link href="{{ asset('css/admin.css') }}" type="text/css" rel="stylesheet" />
	<style>
	#main	{	height:400px;width:975px;	}
	</style>
	{% endblock %}
	<link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

</head>
<body>
	<div id="main">
	<div id="qbar">
		{% block qbar_menu %}
		<ul>
			{% block logged_in %}
			<li><a href="{{ path('admin_index') }}""">Admin</a></li>
			<li><a href="{{ path('index') }}">Public</a></li>
			<li><a href="{{ path('admin_content') }}">Content</a></li>
			<li><a href="{{ path('admin_queue') }}">Queue</a></li>
			<li><a href="{{ path('admin_users') }}">Users</a></li>
			<li><a href="{{ path('_admin_logout') }}">Logout</a></li>
			{% endblock %}
		</ul>
		{% endblock %}
		{% block qbar %}
		{% endblock %}
	</div>

	<div id="content">
		{% if app.session.flash('notice') %}
		<div class="flash-message">
			<em>Notice</em>: {{ app.session.flash('notice') }}
		</div>
		{% endif %}
		{% block content %}{% endblock %}
		<div style="clear:both;"></div>
	</div>

	<div style="clear:both;"></div>
	</div>
	{% block javascripts %}
	 <script src="{{ asset('/js/main.js') }}" type="text/javascript"></script>
	{% endblock %}
</body>
</html>
